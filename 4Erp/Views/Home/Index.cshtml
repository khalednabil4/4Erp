@model IEnumerable<_4Erp.Models.CitiesAndRegions>
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://code.iconify.design/1/1.0.3/iconify.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>
    <title>Document</title>
</head>
<body>

        <div class="row mt-40">
            <center>
            <a asp-action="Add"  class="btn btnnn btn-primary btn-light mr-3" style="float: right; margin: 20px;">اضافة</a>

            </center>

            <div class="col-md-12">
                <div class="card table-card">
                    <div class="card-header">
                        <center>
                        <h3>جدول المدن </h3>
                        </center>
                        
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table  table-dark table-bordered table-hover mb-0">
        <thead>
            <tr>
                <th>كود</th>
                <th>الوصف بالعربى</th>
                <th>الوصف الاجنبى</th>
                <th>العمليات </th>
      
            </tr>
        </thead>
        <tbody>
         
                 @foreach (var item in Model)
                            {
                                   <tr>
                               

                                        <td>@item.CityCode</td>
                                        <td>@item.CityDescriptionAR</td>
                                        <td>@item.CityDescriptionEn</td>
                                        <td>
                                            <div class="d-flex">
                                                <center>
                                                    <a asp-action="update" asp-route-id="@item.CityId" class="btn btnnn btn-warning mr-3">تعديل</a>
                                                    <span class="separator"></span>
                                                    <a asp-action="Delete" asp-route-id="@item.CityId" class="btn btnnn btn-danger">حذف</a>
                                                </center>

                                            </div>
                                        </td>

                                    </tr>
                                    }
       
        
        </tbody>
 
    </table>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

</body>
         </div>
            </div>
        </div>
    </div>
</div>
</html>